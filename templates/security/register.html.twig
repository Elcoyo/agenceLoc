{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<h1 class="text-center">Inscription</h1>
<div class="container">
{{form_start(form)}}
{{form_row(form.email, {'label':'Mon email','attr':{ 'placeholder': 'email@email.com' }})}}
{{form_row(form.userName, {'label': 'Nom d\'utilisateur', 'attr':{'placeholder':'Nom d\'utilisateur'}})}}
{{form_row(form.password , {'label':'Mot de passe','attr':{'placeholder':'Mot de passe '}})}}
{{form_row(form.confirm_password, {'label':'Confirmation du mots de passe !', 'attr':{'placeholder':'Confirmez votre mot de passe'}})}}
<button type="submit" >M'inscrire</button>
{{form_end(form)}}
</div>
{% endblock %}
